<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Overall Score Title -->
    <TextView
        android:id="@+id/overall_score_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OVERALL SCORE"
        android:textSize="12sp"
        android:textColor="#B3B3B3"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <!-- Circular Progress Indicator for Score -->
    <RelativeLayout
        android:id="@+id/score_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/overall_score_title"
        android:layout_centerHorizontal="true"
        android:paddingTop="8dp">

        <!-- Circle background (could also be a drawable) -->
        <ProgressBar
            android:id="@+id/progress_circle"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:rotation="270"
            android:progress="53" />

        <!-- Score Text in the center -->
        <TextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="53/100"
            android:textSize="22sp"
            android:textColor="#FFCC00"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- Score Description -->
    <TextView
        android:id="@+id/score_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AVERAGE"
        android:textSize="16sp"
        android:textColor="#FFCC00"
        android:layout_below="@id/score_container"
        android:layout_centerHorizontal="true"
        android:paddingTop="8dp" />

    <!-- Search Volume and Competition Container -->
    <LinearLayout
        android:id="@+id/search_volume_competition_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_description"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <!-- Search Volume Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Volume"
                android:textSize="14sp"
                android:textColor="#B3B3B3"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGH"
                android:textSize="16sp"
                android:textColor="#00FF00"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Competition Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Competition"
                android:textSize="14sp"
                android:textColor="#B3B3B3"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGH"
                android:textSize="16sp"
                android:textColor="#FF0000"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
